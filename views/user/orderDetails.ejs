                        <span><strong>Payment Method:</strong> 
                            <%if(orders.payment==='cod'){%>
                            CASH ON DELIVERY
            
                            <%}else if(orders.payment==='wallet'){%>
                              WALLET 
                            <%}else{%>
                                RAZORPAY 
                            <%}%>      
                        </span>
                       
