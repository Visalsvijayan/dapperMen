          <div class="col-md-6">
            <div class="card shadow-lg rounded">
              <div class="card-header bg-success text-white text-center">
                <h4>Add Money to Your Wallet</h4>
              </div>
              <div class="card-body">
                <form action="/wallet/addMoney" method="POST">
                  <div class="form-group mb-3">
                    <label for="amount">Enter Amount (₹):</label>
                    <input
                      type="number"
                      class="form-control"
                      name="amount"
                      id="amount"
                      required
                      min="1"
                      placeholder="e.g., 500"
                    />
                  </div>
                  <button type="submit" class="btn btn-success w-100">Add Money</button>
                </form>
      
                <div class="text-center mt-3">
                  <a href="/userProfile#track-orders" class="btn btn-outline-secondary btn-sm">← Back to Wallet</a>
                </div>
              </div>
            </div>
          </div>
