<%- include("../../views/partials/user/header") %>
<style>
    /* Main Container Styles */
    .product-detail-container {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 2px 30px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        margin-bottom: 40px;
    }

    /* Breadcrumb Styles */
    .breadcrumb-wrapper {
        background: #f8f8f8;
        padding: 15px 0;
        margin-bottom: 30px;
    }
    .breadcrumb {
        font-size: 13px;
        color: #666;
        margin: 0;
        padding: 0;
        list-style: none;
        display: flex;
        flex-wrap: wrap;
    }
    .breadcrumb li {
        display: inline;
    }
    .breadcrumb a {
        color: #666;
        transition: color 0.2s;
    }
    .breadcrumb a:hover {
        color: #e53935;
        text-decoration: none;
    }
    .breadcrumb-separator {
        margin: 0 8px;
        color: #999;
    }

    /* Product Gallery Styles */
    .product-gallery {
        position: relative;
        padding: 20px;
    }
    .main-image-container {
        position: relative;
        margin-bottom: 15px;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
    }
    #main-img {
        width: 100%;
        height: auto;
        display: block;
        cursor: zoom-in;
    }
    .zoom-icon {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255,255,255,0.9);
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        z-index: 10;
        color: #333;
    }
    .thumbnail-gallery {
        display: flex;
        gap: 10px;
        padding: 5px 0;
        overflow-x: auto;
    }
    .thumbnail-item {
        width: 70px;
        height: 70px;
        border: 1px solid #eee;
        border-radius: 5px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.2s;
        flex-shrink: 0;
    }
    .thumbnail-item:hover {
        border-color: #e53935;
    }
    .thumbnail-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Product Info Styles */
    .product-info {
        padding: 25px;
    }
    .product-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        line-height: 1.3;
    }
    .product-brand {
        font-size: 14px;
        color: #666;
        margin-bottom: 15px;
    }
    .product-brand a {
        color: #e53935;
        font-weight: 500;
    }
    .product-rating {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }
    .rating-stars {
        color: #ffb300;
        font-size: 16px;
        letter-spacing: 2px;
        margin-right: 8px;
    }
    .rating-count {
        font-size: 13px;
        color: #666;
    }
    .price-container {
        margin: 20px 0;
    }
    .current-price {
        font-size: 28px;
        font-weight: 700;
        color: #e53935;
    }
    .original-price {
        font-size: 18px;
        color: #999;
        text-decoration: line-through;
        margin-left: 10px;
    }
    .discount-badge {
        background: #e53935;
        color: white;
        font-size: 13px;
        font-weight: 600;
        padding: 3px 8px;
        border-radius: 3px;
        margin-left: 10px;
    }
    .product-description {
        color: #555;
        line-height: 1.6;
        margin-bottom: 20px;
        font-size: 15px;
    }
    .product-highlights {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 25px;
    }
    .product-highlights li {
        position: relative;
        padding-left: 25px;
        margin-bottom: 8px;
        color: #555;
    }
    .product-highlights li:before {
        content: "✓";
        color: #4caf50;
        position: absolute;
        left: 0;
        font-weight: bold;
    }

    /* Action Buttons */
    .quantity-selector {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }
    .quantity-control {
        display: flex;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 8px 12px;
        margin-right: 15px;
    }
    .quantity-btn {
        background: none;
        border: none;
        font-size: 16px;
        cursor: pointer;
        color: #666;
        padding: 0 5px;
    }
    .quantity-input {
        width: 50px;
        text-align: center;
        border: none;
        font-size: 16px;
        font-weight: 500;
    }
    .add-to-cart-btn {
        background: #e53935;
        color: white;
        border: none;
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
    }
    .add-to-cart-btn:hover {
        background: #c62828;
        transform: translateY(-2px);
    }
    .add-to-cart-btn i {
        margin-right: 8px;
    }
    .wishlist-btn {
        width: 46px;
        height: 46px;
        border: 1px solid #ddd;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 10px;
        color: #666;
        transition: all 0.2s;
    }
    .wishlist-btn:hover {
        color: #e53935;
        border-color: #e53935;
    }

    /* Product Meta */
    .product-meta {
        border-top: 1px solid #eee;
        padding-top: 20px;
        margin-top: 20px;
    }
    .meta-item {
        display: flex;
        margin-bottom: 8px;
        font-size: 14px;
    }
    .meta-label {
        color: #666;
        min-width: 100px;
    }
    .meta-value {
        color: #333;
    }
    .meta-value a {
        color: #e53935;
    }
    .stock-status {
        color: #4caf50;
        font-weight: 500;
    }

    /* Responsive Adjustments */
    @media (max-width: 767px) {
        .product-title {
            font-size: 20px;
        }
        .current-price {
            font-size: 24px;
        }
        .original-price {
            font-size: 16px;
        }
        .add-to-cart-btn {
            padding: 10px 20px;
            font-size: 14px;
        }
    }
</style>
